{
  "files": [
    "src/app.module.ts",
    "src/main.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit": true
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ],
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "declaration": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": [ "es2015", "dom" ]
  }
}
